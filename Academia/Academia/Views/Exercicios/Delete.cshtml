@model Academia.Models.Exercicio

@{
    ViewData["Title"] = "Exercícios";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 class="display-4">Exercícios</h1>
<h3 class="text-danger">Você tem certeza que deseja deletar?</h3>

<div class="row">
    <div class="col-md-8 col-sm-12 col-xxl-9">
        <div class="form-group mb-3">
            <label asp-for="Nome" class="control-label"></label>
            <input asp-for="Nome" class="form-control" disabled />
        </div>
        <div class="form-group mb-3">
            <label asp-for="Descricao" class="control-label"></label>
            <textarea asp-for="Descricao" class="form-control" rows="5" disabled></textarea>
        </div>
    </div>
    <div class="col-md-4 col-sm-12 col-xxl-3">
        <div class="form-group">
            <label asp-for="Foto" class="form-label"></label>
            <img id="PreviewImage" src='@(Model.Foto ?? "../../imgs/sem_foto.png")' class="img-fluid w-100 pointer" onclick="changeImage()">
        </div>
    </div>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Excluir" class="btn btn-danger" /> |
        <a class="btn btn-primary" asp-action="Index">Voltar para a Lista</a>
    </form>
</div>
